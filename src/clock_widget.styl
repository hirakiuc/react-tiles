.clock {
  border-radius: 50%
  background: #fff url(/dst/ios_clock.svg) no-repeat center
  background-size: 88%
  height: 20em
  position: relative
  width: 20em
  margin: 0 auto

  .minutes-container, .hours-container, .seconds-container {
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
  }

  .hours {
    background: #000
    height: 25%
    left: 48.75%
    position: absolute
    top: 25%
    transform-origin: 50% 100%
    width: 2.5%
  }

  .minutes {
    background: #000
    height: 40%
    left: 49%
    position: absolute
    top: 10%
    transform-origin: 50% 100%
    width: 2%
  }

  .seconds {
    background: #ff4500
    height: 45%
    left: 49.5%
    position: absolute
    top: 14%
    transform-origin: 50% 80%
    width: 1%
    z-index: 8
  }

  @keyframes rotate {
    100% {
      transform: rotateZ(360deg)
    }
  }

  .hours-container {
    animation: rotate 43200s infinite linear
  }
  .minutes-container {
    transition: transform 0.3s cubic-bezier(.4,2.08,.55,.44)
  }
  .seconds-container {
    transition: transform 0.2s cubic-bezier(.4,2.08,.55,.44)
  }
}

.clock.simple:after {
    background: #000
    border-radius: 50%
    content: ""
    position: absolute
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    width: 5%
    height: 5%
    z-index: 10
  }


